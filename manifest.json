{
    "manifest_version": 2,
    "name": "rMDN",
    "version": "0.1",
    "description": "Learn something new! Goes to a random MDN page at the press of a button ",
    "background": {
        "scripts": [
            "js/main.js",
            "js/attach-events.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "*://developer.mozilla.org/*"
            ],
            "js": [
                "js/main.js",
                "js/add-button.js"
            ]
        }
    ],
    "permissions": [
        "*://developer.mozilla.org/*",
        "webRequest",
        "storage",
        "activeTab"
    ],
    "browser_action": {
        "default_icon": "icons/mdn_logo.png",
        "default_title": "Random page!"
    }
}